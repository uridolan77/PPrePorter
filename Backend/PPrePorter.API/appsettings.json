{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Redis": "localhost:6379,abortConnect=false",
    "DailyActionsDB": "data source=185.64.56.157;initial catalog=DailyActionsDB;persist security info=True;user id=${DailyActionsDB--Username};password=${DailyActionsDB--Password};",
    "PPRePorterDB": "Server=tcp:progressplay-server.database.windows.net,1433;Initial Catalog=ProgressPlayDB;Persist Security Info=False;User ID=${ProgressPlayDBAzure--Username};Password=${ProgressPlayDBAzure--Password};MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;"
  },
  "JwtSettings": {
    "SecretKey": "${JWT--SecretKey}",
    "Issuer": "ProgressPlay.Reporter",
    "Audience": "ProgressPlayClients",
    "ExpirationMinutes": 60
  },
  "NLP": {
    "ApiKey": "${NLP--ApiKey}",
    "EndpointUrl": "https://api.nlp-service.com/v1",
    "TimeoutSeconds": 30,
    "EnableCaching": true,
    "CacheExpirationMinutes": 60,
    "ConfidenceThreshold": 0.7,
    "TerminologyMappings": {
      "revenue": "gross_gaming_revenue",
      "player": "user",
      "casino": "gaming_provider",
      "bet": "wager"
    }
  },
  "SemanticLayer": {
    "ModelPath": "C:\\Program Files\\PPrePorter\\Models",
    "MaxQueryComplexity": 5,
    "EnableExplanations": true,
    "EnablePythonIntegration": true,
    "QueryTimeoutSeconds": 30,
    "CachingEnabled": true,
    "CacheExpirationMinutes": 120,
    "DataRefreshIntervalMinutes": 240
  }
}
